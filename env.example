# Database Configuration
# For Docker Compose, these match the postgres service
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=souschef
POSTGRES_PORT=5432

# Database URL (used by the app)
# For Docker Compose, use: postgresql://postgres:postgres@postgres:5432/souschef?schema=public
# For external database, use your connection string
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/souschef?schema=public

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
# IMPORTANT: NEXTAUTH_SECRET is required for authentication to work
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# IMPORTANT: NEXTAUTH_URL must match the URL your app is running on
# For local development: http://localhost:3000 (or your port)
# For production: https://yourdomain.com
# This MUST be set correctly or you'll get CLIENT_FETCH_ERROR
NEXTAUTH_URL=http://localhost:3000

# Application Port (for Docker)
APP_PORT=3000

# HTTPS Configuration (Optional)
# Set ENABLE_HTTPS=true to enable HTTPS mode
# If certificates are not provided via volume mount, self-signed certs will be auto-generated
# This is useful for Safari barcode scanning which requires HTTPS
ENABLE_HTTPS=false
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem
HOSTNAME=0.0.0.0

# SMTP Configuration (Optional - for email authentication)
# Leave empty if you don't want email authentication
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@souschef.local

